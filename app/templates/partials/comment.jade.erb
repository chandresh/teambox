- var reply_email_url = self.project.permalink + '+' + self.target_type.toLowerCase() + '+' + self.target_id + '@<%= Teambox.config.smtp_settings[:domain]%>'
- var conversation_url = self.project.permalink + '+' + 'conversation@<%= Teambox.config.smtp_settings[:domain]%>'
- var task_url = self.project.permalink + '+' + 'task@<%= Teambox.config.smtp_settings[:domain]%>'

.comment(data-editable-before= self.ms_since(<%= 15.minutes.to_s %>, self.created_at), id= 'comment_' + self.id, data-project= self.project_id, data-id= self.id, data-user= self.user_id)
  .info
    a.micro_avatar(href= self.user_url(self.user), style= 'background: url(' + self.user.micro_avatar_url + ') no-repeat')
  .block
    .actions_menu
      img(src="/img_3_2/ico/arrow-dropdown.png", alt="Triangle",class="triangle")
      .extra
        a.edit(style= 'display:none;', data-uneditable-message='<%=t('comments.comment.cannot_edit')%>') <%= t('comments.actions.edit') %>
        a.reply_email(rel= 'facebox', href= '#email_post_' + self.id) <%= t('comments.actions.post_by_email') %>
        a.delete(style= 'display:none;', href= "#", data-undeleteable-message='<%=t('comments.comment.cannot_delete')%>', data-confirm='<%= t('comments.comment.confirm_delete') %>') <%= t('common.delete') %>
    .actiondate
      time.timeago(data-msec= self.ms(self.updated_at), pubdate= 'true')= self.timeAgo(self.updated_at)
    .body.textilized
      .before
        a.user(href= self.user_url(self.user))= self.full_name(self.user)

        != self.transition_due_on(self.due_on, self.previous_due_on);

        - if (self.hours)
          span.hours= self.human_hours(self.hours)

        != self.status_transition()

      != self.body_html
    - if (self.uploads && self.uploads.length)
      .upload_images
        - each upload in self.uploads
          div(class='upload_thumbnail', id="upload_#{upload.id}")
            a(href= self.downloadUrl(upload.id, upload.filename, "original"), class="link_to_upload", rel="facebox")
              img(alt="#{upload.description}", src=self.downloadUrl(upload.id, upload.filename, "thumb"))

    - if (self.google_docs && self.google_docs.length)
      ul.google_docs_list
        - each google_doc in self.google_docs
          li.upload
            span.file_icon.google_icon
              img(src="/images/google_docs/icon_6_#{google_doc.document_type}.gif",alt=google_doc.document_type)
            span.filename
              a(href=self.google_docs_url(google_doc, self.project), target='blank')= google_doc.title

  div(id= 'email_post_' + self.id, style= 'width: 600px;display: none;')
    h1 <%= t('users.email_posts.title') %>
    p <%= t('users.email_posts.send_replies_with_this_email') %>
    p
      a(href: 'mailto:' + reply_email_url)= reply_email_url
    p <%= t('users.email_posts.teambox_magic_happens') %>

    p <%= t('users.email_posts.other_shortcuts_available') %>

    table(style= 'width: 580px')
      tr
        td
          a(href: 'mailto:' + conversation_url)= conversation_url
        td <%= t('users.email_posts.will_create_conversation') %>
      tr
        td
          a(href: 'mailto:' + task_url)= task_url
        td <%= t('users.email_posts.will_create_task') %>
  .clear
