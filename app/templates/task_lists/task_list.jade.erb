.task_list(data-task-list-id=  self.task_list.id)
  .head
    span.task_list_name= self.task_list.get('name')

    .actions_menu
      -if (self.task_list.get('start_on') && self.task_list.get('finish_on'))
        span.actiondate #{self.date(self.task_list.get('start_on'))} - #{self.date(self.task_list.get('finish_on'))}
      -else if(self.task_list.get('start_on'))
        span.actiondate Starts on #{self.date(self.task_list.get('start_on'))}
      -else if(self.task_list.get('finish_on'))
        span.actiondate Ends on #{self.date(self.task_list.get('finish_on'))}
      -else
        span.actiondate No dates assigned

      img.triangle(alt= 'Triangle', src='/images/triangle.png')
      .extra
        a.task_list_rename(href= '#') <%= t('task_lists.actions.rename')%>
        a.task_list_set_dates(href= '#') <%= t('task_lists.actions.set_dates')%>
        a.task_list_resolve(href= '#') <%= t('task_lists.actions.resolve_and_archive')%>
        a.task_list_delete(href= '#') <%= t('common.delete')%>

    form.task_list_form(accept-charset='UTF-8', style= 'display: none;overflow-x: visible;overflow-y: visible;')
      input(name= 'task_list[id]', type= 'hidden', value= self.task_list.id)

      .name.text_field(style= 'display:none;')
        label(for='task_list_name')
          | Choose a name for this Task List 
          i eg. Prepare a Prototype
        input#task_list_name(autofocus='autofocus', name='task_list[name]', size='30', type='text', value= self.task_list.get('name'))


      .date_fields(style= 'display:none;')

      img.loading(alt= 'Loading', src= '/images/loading.gif', style= 'display: none')
      div.submit
        input.inline_form_update(name='commit', type='submit', value='Update Task List')
        | or
        a.inline_form_update_cancel(href='#') Cancel

  .tasks.open(id= 'project_' + self.task_list.get('project_id') + '_task_list_' + self.task_list.id + '_the_main_tasks')
