%div.upload{ :class => cycle('alternate', ''), :id => "folder_#{folder.id}" }
  .header
    .icon
      = image_tag '/famfamfam/folder.png'
    .file
      = link_to folder.name, project_folder_path(@current_project, folder), :remote => true, :class => "ajax"
    .size
      = pluralize (folder.uploads_count + folder.folders_count), 'file'
    .author
      =# folder.user
    .more
      [+]

  .reference{ :style => 'display: none' }
    - if true or can?(:update, folder)
      = link_to t('folders.remove.link'), [@current_project, folder], :remote => true, :method => :delete, :confirm => t('confirm.delete_folder')
      = link_to t('folders.rename.link'), edit_project_folder_path(@current_project, folder), :remote => true, :class => "link_rename"

  .actions_container